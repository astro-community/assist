---
import * as assist from '@astropub/assist'

export interface Props {
	src: string | URL
	alt?: string
	width?: string | number
	height?: string | number
}

const { src, ...props } = { alt: '', ...Astro.props } as Props

const resolvedSrc = assist.resolve(Astro.request.url, src)
const emittedSrc = assist.add(resolvedSrc)
---
<img src={emittedSrc} {...props} />